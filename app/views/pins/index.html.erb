<p id="notice"><%= notice %></p>
<div class='container'>
    <h1>Pins</h1>
    <% @pins.each do |pin| %>
        <div class="col-md-3">
            <div class="thumbnail">
                <%= pin.description %>
                <%= image_tag(pin.photo, :class => 'img-responsive') %>
                <div class="buttons" style="margin-top: 10px; margin-bottom: 10px">
                    <%= link_to 'Show', pin, :class => 'btn btn-primary' %>
                    <% if user_signed_in? %>
                        <%= link_to 'Edit', edit_pin_path(pin), :class => 'btn btn-primary' %>
                        <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-primary'%>
                    <% end %>
                </div>
            </div>
        </div>
    <% end %>
    <br>

    <% if user_signed_in? %>
        <%= link_to 'New Pin', new_pin_path %>
    <% end %>
</div>
